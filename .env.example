# 3Wallet Environment Variables Template
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ============================================================================
# Application Settings
# ============================================================================

# Environment (development, staging, production)
VITE_ENVIRONMENT=development

# Application URL
VITE_APP_URL=http://localhost:5173

# ============================================================================
# Blockchain RPC Endpoints
# ============================================================================

# Ethereum
VITE_ETHEREUM_RPC_URL=https://eth.llamarpc.com
VITE_ETHEREUM_SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Polygon
VITE_POLYGON_RPC_URL=https://polygon-rpc.com

# BSC
VITE_BSC_RPC_URL=https://bsc-dataseed.binance.org

# Avalanche
VITE_AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# Bitcoin
VITE_BITCOIN_RPC_URL=https://blockstream.info/api
VITE_BITCOIN_TESTNET_RPC_URL=https://blockstream.info/testnet/api

# Solana
VITE_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
VITE_SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com

# ============================================================================
# API Keys (Optional - for enhanced features)
# ============================================================================

# Alchemy (for Ethereum RPC)
VITE_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura (alternative Ethereum RPC)
VITE_INFURA_PROJECT_ID=your_infura_project_id_here

# CoinGecko (for price data)
VITE_COINGECKO_API_KEY=your_coingecko_api_key_here

# Etherscan (for transaction verification)
VITE_ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ============================================================================
# Email Service (for waitlist and contact forms)
# ============================================================================

# Email service provider (sendgrid, mailgun, resend, etc.)
EMAIL_SERVICE_PROVIDER=resend

# API Key for email service
EMAIL_API_KEY=your_email_api_key_here

# From email address
EMAIL_FROM=hello@3wallet.app

# Admin email for notifications
EMAIL_ADMIN=admin@3wallet.app

# ============================================================================
# Database (Optional - for production)
# ============================================================================

# Redis connection string (for session management)
REDIS_URL=redis://localhost:6379

# TigerBeetle connection (for transaction ledger)
TIGERBEETLE_CLUSTER_ID=your_cluster_id_here
TIGERBEETLE_ADDRESSES=localhost:3000

# ============================================================================
# Security Settings
# ============================================================================

# Session secret (generate a random string)
SESSION_SECRET=your_random_session_secret_here

# JWT secret (for API authentication)
JWT_SECRET=your_random_jwt_secret_here

# Encryption salt (for additional security)
ENCRYPTION_SALT=your_random_encryption_salt_here

# ============================================================================
# Feature Flags
# ============================================================================

# Enable testnet mode (true/false)
VITE_TESTNET_MODE=true

# Enable multi-signature features (true/false)
VITE_ENABLE_MULTISIG=false

# Enable AI risk analysis (true/false)
VITE_ENABLE_AI_RISK=false

# Enable hardware wallet support (true/false)
VITE_ENABLE_HARDWARE_WALLET=false

# ============================================================================
# Analytics & Monitoring (Optional)
# ============================================================================

# Google Analytics ID
VITE_GA_ID=your_google_analytics_id_here

# Sentry DSN (for error tracking)
VITE_SENTRY_DSN=your_sentry_dsn_here

# ============================================================================
# Social Media & Contact
# ============================================================================

# Discord invite link
VITE_DISCORD_URL=https://discord.gg/3wallet

# Twitter/X handle
VITE_TWITTER_URL=https://twitter.com/3walletapp

# Telegram channel
VITE_TELEGRAM_URL=https://t.me/3wallet

# GitHub repository
VITE_GITHUB_URL=https://github.com/TrillionUnicorn/3Wallet

# ============================================================================
# Rate Limiting
# ============================================================================

# Max requests per minute for API endpoints
RATE_LIMIT_MAX_REQUESTS=100

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# ============================================================================
# Development Settings
# ============================================================================

# Enable debug mode (true/false)
VITE_DEBUG=true

# Enable verbose logging (true/false)
VITE_VERBOSE_LOGGING=false

# Mock blockchain responses (for testing without real RPC)
VITE_MOCK_BLOCKCHAIN=false

